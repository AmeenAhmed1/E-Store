<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EStore" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <style name="SearchViewStyle">
        <item name="android:background">@drawable/search_view</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableStart">@drawable/icon_search</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="HeadLineTextViewCustomStyle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextViewCustomStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextViewRegular" parent="TextViewCustomStyle">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="GreenButtonCustomStyle" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/green</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:paddingStart">@dimen/dp_25</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:paddingEnd">@dimen/dp_25</item>
    </style>

    <style name="AccountItemStyle">
        <item name="android:padding">@dimen/dp_16</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

</resources>